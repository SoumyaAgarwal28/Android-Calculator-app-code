<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.android_developer.soumya.basiccalculator.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/oldTextView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Soumya's"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="viewEnd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/newTextView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Calci :)"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="viewEnd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/oldTextView" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button7Clicked"
        android:layout_below="@+id/newTextView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button8Clicked"
        android:layout_below="@+id/newTextView"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button9Clicked"
        android:layout_below="@+id/newTextView"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="C"
        android:textSize="50dp"
        android:textStyle="normal"
        android:onClick="buttonCClicked"
        android:textColor="#000000"
        android:layout_below="@+id/newTextView"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button4Clicked"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button5Clicked"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button1Clicked"
        android:layout_below="@+id/button4"
        android:layout_toStartOf="@+id/button5"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button2Clicked"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/buttonDec"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="."
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_below="@+id/button1"
        android:layout_toStartOf="@+id/button2"/>

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDec"
        android:text="CALCULATE"
        android:textSize="30dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="buttonCalcClicked"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button6Clicked"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button3Clicked"
        android:layout_alignEnd="@+id/button6"
        android:layout_below="@+id/button6" />

    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="button0Clicked"
        android:layout_below="@+id/button2"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="buttonAddClicked"
        android:layout_below="@+id/button9"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="buttonSubClicked"
        android:layout_alignEnd="@+id/buttonAdd"
        android:layout_below="@+id/buttonAdd" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="buttonDivClicked"
        android:layout_below="@+id/button3"
        android:layout_toStartOf="@+id/buttonSub" />

    <Button
        android:id="@+id/buttonMul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="*"
        android:textSize="50dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:onClick="buttonMulClicked"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/buttonDiv" />

</RelativeLayout>
